{
  "name": "@k8skonf/cli",
  "version": "0.6.3",
  "author": {
    "name": "konfjs",
    "url": "https://github.com/konfjs"
  },
  "license": "MPL-2.0",
  "homepage": "https://github.com/konfjs/k8skonf",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/konfjs/k8skonf.git",
    "directory": "packages/cli"
  },
  "bugs": {
    "url": "https://github.com/konfjs/k8skonf/issues"
  },
  "keywords": [
    "konfjs",
    "k8skonf",
    "kubernetes",
    "cdk8s",
    "cdk",
    "helm"
  ],
  "publishConfig": {
    "access": "public",
    "exports": {
      ".": {
        "import": "./dist/index.js",
        "types": "./dist/index.d.ts"
      }
    }
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "bin": {
    "@k8skonf/cli": "./dist/index.js"
  },
  "scripts": {
    "lint": "biome lint",
    "gen": "rm -rf ./gen && openapi-generator-cli generate",
    "add_shebang": "perl -i -pe 's,#!/usr/bin/env tsx,#!/usr/bin/env node,g' dist/index.js",
    "build": "rm -rf dist && tsc && pnpm run add_shebang && chmod +x dist/index.js",
    "prepack": "pnpm run build"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@k8skonf/core": "workspace:*",
    "@openapitools/openapi-generator-cli": "2.24.0",
    "tsx": "4.20.5",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "commander": "^14.0.1",
    "json-schema-to-typescript": "^15.0.4",
    "picocolors": "^1.1.1",
    "resolve-pkg": "^2.0.0",
    "ts-morph": "^27.0.0",
    "yaml": "^2.8.1"
  }
}
