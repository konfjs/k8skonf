{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/refs/heads/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "include-component-in-tag": true,
  "pull-request-title-pattern": "chore: release v${version}",
  "changelog-sections": [
    {
      "type": "feat",
      "hidden": false,
      "section": "New Features"
    },
    {
      "type": "fix",
      "hidden": false,
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "hidden": false,
      "section": "Maintenance"
    },
    {
      "type": "ci",
      "hidden": false,
      "section": "Maintenance"
    },
    {
      "type": "deps",
      "hidden": false,
      "section": "Dependencies"
    }
  ],
  "packages": {
    "packages/cli": {
      "package-name": "@k8skonf/cli"
    },
    "packages/core": {
      "package-name": "@k8skonf/core"
    }
  }
}
