{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/refs/heads/main/schemas/config.json",
  "release-type": "node",
  "bump-minor-pre-major": true,
  "include-component-in-tag": true,
  "changelog-sections": [
    {
      "type": "feat",
      "hidden": false,
      "section": "Features"
    },
    {
      "type": "fix",
      "hidden": false,
      "section": "Bug Fixes"
    },
    {
      "type": "chore",
      "hidden": false,
      "section": "Chores"
    },
    {
      "type": "ci",
      "hidden": false,
      "section": "Chores"
    }
  ],
  "packages": {
    "packages/cli": {
      "package-name": "@k8skonf/cli"
    },
    "packages/core": {
      "package-name": "@k8skonf/core"
    }
  }
}
